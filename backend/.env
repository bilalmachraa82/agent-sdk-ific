# Environment
ENVIRONMENT=development
PROJECT_NAME="EVF Portugal 2030"
VERSION=0.1.0

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
LOG_LEVEL=INFO

# Database (for local testing - adjust as needed)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/evf_portugal_2030

# Redis (optional for now)
REDIS_URL=

# Security
SECRET_KEY=dev-secret-key-change-in-production-1234567890abcdef
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI APIs (add your key when ready)
ANTHROPIC_API_KEY=

# Qdrant (optional for now)
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_COLLECTION=evf_documents

# Multi-tenant
ENABLE_MULTI_TENANT=true
DEFAULT_TENANT_SLUG=demo

# Limits
MAX_TOKENS_PER_DAY=1000000
MAX_EVFS_PER_TENANT=1000
RATE_LIMIT_PER_MINUTE=100

# Storage
FILE_STORAGE_PATH=/tmp/evf/uploads
MAX_FILE_SIZE_MB=100

# Monitoring
ENABLE_METRICS=true
SENTRY_DSN=

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]